#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);
    
    int petrol[n], distance[n];
    for(int i = 0; i < n; i++) {
        scanf("%d %d", &petrol[i], &distance[i]);
    }
    
    int start = 0;
    int curr_surplus = 0;
    int total_surplus = 0;
    
    for(int i = 0; i < n; i++) {
        int diff = petrol[i] - distance[i];
        curr_surplus += diff;
        total_surplus += diff;
        
        if(curr_surplus < 0) {
            start = i + 1;
            curr_surplus = 0;
        }
    }
    
    // If total petrol >= total distance, a solution exists
    if(total_surplus >= 0) {
        printf("%d\n", start);
    } else {
        printf("-1\n"); // technically shouldn't happen per problem constraints
    }
    
    return 0;
}
