#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int twoStacks(int maxSum, int a_count, int* a, int b_count, int* b) {
    long long sum = 0;
    int i = 0, j = 0;
    int count = 0;
    
    // First, take as many as possible from stack A without exceeding maxSum
    while (i < a_count && sum + a[i] <= maxSum) {
        sum += a[i];
        i++;
    }
    count = i;
    
    // Now try to replace elements from stack A with elements from stack B
    while (j < b_count && i >= 0) {
        sum += b[j];
        j++;
        
        // If sum exceeds maxSum, remove elements from stack A
        while (sum > maxSum && i > 0) {
            i--;
            sum -= a[i];
        }
        
        // Update count if current combination is valid and better
        if (sum <= maxSum && i + j > count) {
            count = i + j;
        }
    }
    
    return count;
}

// Alternative approach using prefix sums
int twoStacks2(int maxSum, int a_count, int* a, int b_count, int* b) {
    // Calculate prefix sums for both stacks
    long long* prefixA = (long long*)malloc((a_count + 1) * sizeof(long long));
    long long* prefixB = (long long*)malloc((b_count + 1) * sizeof(long long));
    
    prefixA[0] = 0;
    for (int i = 0; i < a_count; i++) {
        prefixA[i + 1] = prefixA[i] + a[i];
    }
    
    prefixB[0] = 0;
    for (int i = 0; i < b_count; i++) {
        prefixB[i + 1] = prefixB[i] + b[i];
    }
    
    int maxCount = 0;
    
    // For each possible number of elements taken from stack A
    for (int i = 0; i <= a_count; i++) {
        if (prefixA[i] > maxSum) break;
        
        // Find maximum elements from stack B that can be taken
        long long remaining = maxSum - prefixA[i];
        
        // Binary search in prefixB
        int left = 0, right = b_count;
        while (left <= right) {
            int mid = left + (right - left) / 2;
            if (prefixB[mid] <= remaining) {
                left = mid + 1;
            } else {
                right = mid - 1;
            }
        }
        
        int total = i + right;
        if (total > maxCount) {
            maxCount = total;
        }
    }
    
    free(prefixA);
    free(prefixB);
    return maxCount;
}

int main() {
    int g;
    scanf("%d", &g);
    
    while (g--) {
        int n, m, maxSum;
        scanf("%d %d %d", &n, &m, &maxSum);
        
        int* a = (int*)malloc(n * sizeof(int));
        int* b = (int*)malloc(m * sizeof(int));
        
        for (int i = 0; i < n; i++) {
            scanf("%d", &a[i]);
        }
        for (int i = 0; i < m; i++) {
            scanf("%d", &b[i]);
        }
        
        int result = twoStacks(maxSum, n, a, m, b);
        printf("%d\n", result);
        
        free(a);
        free(b);
    }
    
    return 0;
}
